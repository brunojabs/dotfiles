function vim {
    if [[ -z "$@" ]]; then
	if [[ -f "./Session.vim" ]]; then
	    nvim -S Session.vim -c 'lua vim.g.savesession = true'
	else
	    nvim -c 'lua vim.g.savesession = true'
	fi
    else
    	nvim "$@"
    fi
}

bindkey -s ^f "tmux-sessionizer\n"

